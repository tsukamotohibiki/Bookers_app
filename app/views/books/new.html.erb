<h1>Books</h1>
<!-- form_with部分 -->
<% if @book.errors.any? %>
  <%= @book.errors.count %> error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>boby</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
